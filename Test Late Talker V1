<script>
function calcularResultado() {
    // VALIDAR EDAD
    const edad = parseInt(document.getElementById('edad').value);
    if (!edad || edad < 12 || edad > 42) {
        alert('‚ö†Ô∏è Por favor ingresa una edad v√°lida entre 12 y 42 meses');
        return;
    }

    // OBTENER RESPUESTAS
    const respuestas = {
        palabras: document.querySelector('input[name="palabras"]:checked')?.value,
        comprension: document.querySelector('input[name="comprension"]:checked')?.value,
        suc: document.querySelector('input[name="suc"]:checked')?.value,
        respiracion: document.querySelector('input[name="respiracion"]:checked')?.value,
        gestos: document.querySelector('input[name="gestos"]:checked')?.value
    };

    // VALIDAR RESPUESTAS COMPLETAS
    if (Object.values(respuestas).includes(undefined)) {
        alert('‚ö†Ô∏è Por favor responde todas las preguntas');
        return;
    }

    // C√ÅLCULO DE RIESGO PONDERADO
    let riesgo = 0;
    if (respuestas.palabras === 'bajo') {
        if (edad >= 30) riesgo += 4;
        else if (edad >= 24) riesgo += 3;
        else riesgo += 2;
    } else if (respuestas.palabras === 'medio' && edad >= 30) {
        riesgo += 2;
    }
    if (respuestas.comprension === 'no') riesgo += 3;
    else if (respuestas.comprension === 'parcial') riesgo += 1;
    if (respuestas.suc === 'si' && edad >= 18) riesgo += 1;
    if (respuestas.respiracion === 'no') {
        if (edad >= 24) riesgo += 2;
        else riesgo += 1;
    }
    if (respuestas.gestos === 'no') {
        if (edad >= 18) riesgo += 3;
        else riesgo += 1;
    }

    // GENERAR RESULTADO
    const resultadoDiv = document.getElementById('resultado');
    let htmlResultado = '';
    let claseResultado = '';

    if (riesgo >= 5 || (edad >= 30 && respuestas.palabras === 'bajo')) {
        claseResultado = 'result-box visible';
        htmlResultado = `
            <strong>üö® ALTO RIESGO (Edad: ${edad} meses)</strong><br><br>
            <strong>Perfil cl√≠nico:</strong> Retraso severo con componente orofacial<br><br>
            
            <strong>ACCIONES URGENTES (7 d√≠as):</strong>
            <ul class="strategy-list">
                <li>üé§ Graba 3 minutos de interacci√≥n diaria y anota vocalizaciones</li>
                <li>üëÅÔ∏è Juego de mirada: coloca a tu beb√© frente a ti, habla cuando te mire</li>
                <li>üéØ Interacci√≥n f√≠sica cara a cara sin juguetes intermedios</li>
            </ul>
            
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSeNNxAtHsrulDqJeqJDSyXPFUk2mACFeP6xL0oUb08VjmvPTg/viewform?usp=header" class="action-link" style="color: #E53E3E;">
            üìÖ SOLICITA TU PLAN DE ACCI√ìN ‚Üí</a>
        `;
    } else if (riesgo >= 2 || (edad >= 24 && respuestas.palabras !== 'alto')) {
        claseResultado = 'result-box visible';
        htmlResultado = `
            <strong>‚ö†Ô∏è RIESGO MODERADO (Edad: ${edad} meses)</strong><br><br>
            <strong>Perfil cl√≠nico:</strong> Late Talker funcional con ${riesgo} √°reas por mejorar<br><br>
            
            <strong>PROTOCOLO 21 D√çAS (empieza HOY):</strong>
            <ul class="strategy-list">
                <li>üîÑ Juego de turnos sonoros: t√∫ haces un sonido, esperas 5s a imitaci√≥n. Repite 10 veces/d√≠a</li>
                <li>üìñ Lectura dialogante: pregunta "¬ød√≥nde est√° el perro?" y espera se√±alaci√≥n + sonido</li>
                <li>üçé Alimentaci√≥n funcional: ofrece texturas que requieran masticaci√≥n lateral</li>
            </ul>
            
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSeNNxAtHsrulDqJeqJDSyXPFUk2mACFeP6xL0oUb08VjmvPTg/viewform?usp=header" class="action-link" style="color: #F0B429;">
            üéØ SOLICITA TU PLAN DE ACCI√ìN ‚Üí</a>
        `;
    } else {
        claseResultado = 'result-box visible';
        htmlResultado = `
            <strong>‚úÖ DESARROLLO ADECUADO (Edad: ${edad} meses)</strong><br><br>
            <strong>Perfil cl√≠nico:</strong> Lenguaje evolutivo dentro de la normalidad<br><br>
            
            <strong>ESTRATEGIAS DE POTENCIACI√ìN:</strong>
            <ul class="strategy-list">
                <li>üó£Ô∏è Input denso: describe cada acci√≥n antes de hacerla</li>
                <li>üîç Exploraci√≥n sensorial multi: nombra 5 cosas que ves, 3 que oyes, 1 que hueles</li>
                <li>ü§ù Tareas cooperativas: "p√°same el lego rojo, por favor"</li>
            </ul>
            
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSeNNxAtHsrulDqJeqJDSyXPFUk2mACFeP6xL0oUb08VjmvPTg/viewform?usp=header" class="action-link" style="color: #0C6E5A;">
            üì≤ SIGUE PARA M√ÅS ESTRATEGIAS ‚Üí</a>
        `;
    }

    resultadoDiv.className = claseResultado;
    resultadoDiv.innerHTML = htmlResultado;
    
    setTimeout(() => {
        resultadoDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }, 50);
}
